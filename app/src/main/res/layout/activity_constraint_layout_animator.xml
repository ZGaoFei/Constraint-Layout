<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ConstraintLayoutAnimatorActivity">

    <TextView
        android:id="@+id/tv_animator_one"
        style="@style/TextWidthWrap"
        android:layout_marginLeft="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="animator one" />

    <TextView
        android:id="@+id/tv_animator_two"
        style="@style/TextWidthWrap"
        android:layout_marginLeft="30dp"
        android:text="animator two"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_animator_one" />

    <TextView
        android:id="@+id/tv_animator_three"
        style="@style/TextWidthWrap"
        android:text="animator three"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_to_default"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="start"/>

    <Button
        android:id="@+id/button_to_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/button_start"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="to default"/>

</android.support.constraint.ConstraintLayout>